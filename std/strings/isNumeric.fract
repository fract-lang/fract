# Returns true if string is numeric, false if not.
#

protected func IsNumeric(str, float=true)
	if str == ""
		ret false
	end

	var dotted = false
	for _, char in str
		if float == true && char == "."
			dotted = true
		elif IsNumericChar(char) == false
			ret false
		end
	end

	ret true
end

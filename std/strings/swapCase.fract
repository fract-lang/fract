# Swaps cases, lowercase becomes uppercase and vice versa.
#

protected func SwapCase(str)
	for index, char in str
		if IsLetter(char) == false
			continue
		end
		if IsLower(char)
			str[index] = char - 32
		elif IsUpper(char)
			str[index] = char + 32
		end
	else
		ret ""
	end

	ret str
end
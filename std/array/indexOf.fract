# Description
# ----------------
# Returns index if element is found in array, returns -1 if not.
#

func IndexOf(array, element, start=0)
	if start < 0 | start >= len(array)
		ret -1
	end
	
	for _, index in range(start, len(array) - start + 1)
		if array[index] == element
			ret index
		end
	end
	
	ret -1
end

# Returns power using binary exponentiation of number.
#

protected func BinaryPow(x, y, z=false)
	var n = 1
	
	for y > 0
		if y & 1
			n *= x
		end

		x *= x
		y >>= 1
	end

	if z <> false
		ret n % z
	end

	ret n
end

# Returns power of number.
#

protected func Pow(x, y, z=false)
	var n = 1
	for _, a in range(1, y)
		n *= x
	end

	if z <> false
		ret n % z
	end

	ret n


	# Recursive
	#>
	if y == 0
		ret 1
	end

	if z <> false
		ret (x * Pow(x, y - 1)) % z
	end

	ret x * Pow(x, y - 1)
	<#
end
